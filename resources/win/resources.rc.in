#include "windows.h"

#define APP_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define APP_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define APP_VERSION_PATCH @PROJECT_VERSION_PATCH@
#define APP_VERSION_BUILD 0

#define VER_FILEVERSION         APP_VERSION_MAJOR,APP_VERSION_MINOR,APP_VERSION_PATCH,APP_VERSION_BUILD
#define VER_FILEVERSION_STR     "@PROJECT_VERSION@"

#define IDI_ICON1 101
IDI_ICON1   ICON    "@ICON_PATH@"

VS_VERSION_INFO     VERSIONINFO
FILEVERSION         VER_FILEVERSION
PRODUCTVERSION      VER_FILEVERSION
FILEFLAGSMASK       VS_FFI_FILEFLAGSMASK
FILEFLAGS           0
FILEOS              VOS_NT_WINDOWS32
FILETYPE            VFT_APP
FILESUBTYPE         VFT2_UNKNOWN

BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "CompanyName", "DarkContact"
            VALUE "FileDescription", "GoldenLand Editor"
            VALUE "FileVersion", VER_FILEVERSION_STR
            VALUE "InternalName", "GoldenLandEditor"
            VALUE "ProductName", "GoldenLand Editor"
            VALUE "ProductVersion", VER_FILEVERSION_STR
            VALUE "OriginalFilename", "GoldenLandEditor.exe"
            VALUE "LegalCopyright", "\xA9 2025 DarkContact"
            VALUE "Comments", "https://github.com/DarkContact/GoldenLandEditor"
        END
    END

    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 0x04b0
    END
END
